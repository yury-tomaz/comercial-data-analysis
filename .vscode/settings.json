{
 // Active pylint
 "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
 "pylint.args": [
  "--rcfile=${workspaceFolder}/.pylintrc",
 ],
 "[python]": {
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "ms-python.pylint",
 },
 "files.exclude": {
  "**/.git": true,
  "**/.svn": true,
  "**/.hg": true,
  "**/CVS": true,
  "**/.DS_Store": true,
  "**/Thumbs.db": true
 }
}